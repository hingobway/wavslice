  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "../src-c/build/markers",
          "sidecar": true,
          "args": [
            {
              "validator": ".+"
            },
            {
              "validator": ".+"
            },
            {
              "validator": ".+"
            }
          ]
        }
      ]
    }
  ]
}